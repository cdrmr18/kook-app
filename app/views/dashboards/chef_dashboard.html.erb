<h1 class="chef-dash-header text-center">Chef Dashboard</h1>
<div class="container mt-4">
  <div class="container text-center card py-3 shadow-sm container-dash">
    <div class="row">
      <div class="col-12">
        <%= cl_image_tag current_user.photo.key, width: 175, height: 175,  crop: :fill, class: "chef-avatar mb-4"  %>
       </div>
       <div class="col-12">
        <h1 class="user-dash-name" ><%= @chef.user.first_name %> <%= @chef.user.last_name %></h1>
      </div>
    </div>
  </div>

<!-- booking confirmation -->
<div class="container shadow-sm ">
  <div class="row booking-confirm mt-4 text-center">
    <div class="col-12 card card-body pb-2 pt-3">
        <% if @bookings.empty? %>
          <h3>You have no bookings</h3>
        <% else  %>
          <h4>Booking #<%= @bookings[-1].id %></h4>
          <h5><%= @bookings[-1].recipe.name %></h5>
            <p><%= @bookings[-1].date.strftime("%B %e, %Y") %> <%= @bookings[-1].start_time.strftime("%I:%M%p") %> - <%= @bookings[-1].start_time.strftime("%I:%M%p") %></p>
            <div class="col card card-body pb-1 pt-2 d-inline-flex p-2">
              <p class="link-user-dash" ><%= link_to "Accept "%><i class="far fa-check-square"></i></p>
            </div>
            <div class="col card card-body pb-1 pt-2">
              <p class="link-user-dash"><%= link_to "Decline  " %><i class="fas fa-ban"></i></p>
            </div>
          <% end %>
      </div>



  </div>
</div>

<!-- collapse menu -->

  <div id="accordion" class="my-4 shadow-sm">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0 text-center">
        <button class="btn btn-link link-user-dash" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          My Recipes
        </button>
      </h5>
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">
         <!-- booking history -->
        <div class="container mt-4">
          <div class="container">
            <h2 class="text-center mb-4">My Recipes</h2>
            <div class="container text-center" >
              <%= link_to "Add Recipe", new_recipe_path, class: "btn btn-light shadow-sm mb-4 d-flex justify-content-center", id:"chef-btn" %>
            </div>
            <% if !@recipes.empty? %>
              <% @recipes.each do |recipe| %>
                <ul>
                  <p class="link-user-dash"><%= link_to recipe.name, recipe_path(recipe) %> | <span><%= link_to "remove", recipe_path(recipe), method: :delete, data: {confirm: "Are you sure?" } %></span></p>
                </ul>
              <% end %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
    <!-- chef reviews -->
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0 text-center">
          <button class="link-user-dash btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            My Chef Reviews
          </button>
        </h5>
      </div>
      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
        <div class="card-body">

        </div>
      </div>
    </div>
    <!-- recipe reviews -->
    <div class="card">
      <div class="card-header" id="headingThree">
        <h5 class="mb-0 text-center">
          <button class="link-user-dash btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
            My Recipe Reviews
          </button>
        </h5>
      </div>
      <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
        <div class="card-body">

        </div>
      </div>
    </div>
  </div>
<!-- account cancellation -->
  <div class="container text-center mb-4">
    <p><%= link_to "Delete Chef Account",  chef_path(@chef), method: :delete, class: "mt-4 btn btn-light mb-4 shadow del-chef" %></p>
  </div>
</div>



