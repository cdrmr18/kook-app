<h1 class="chef-dash-header text-center">User dashboard</h1>
<div class="container mt-4">
  <div class="container text-center card py-3 shadow-sm  container-dash ">

    

    <div class="row">
      <div class="col-12">
        <%= cl_image_tag current_user.photo.key, width: 175, height: 175,  crop: :fill, class: "chef-avatar mb-4"  %>
       </div>
       <div class="col-12">
        <h1 class="user-dash-name" ><%= current_user.first_name %> <%= current_user.last_name %></h1>
          <!-- create chef link -->
        <% if !current_user.chef.present? %>
          <%= link_to "Become a chef", new_chef_path, class: "btn btn-light mt-2 shadow-sm", id: "chef-btn" %>
        <% end %>
      </div>
    </div>
  </div>

<!-- booking confirmation -->
<div class="container shadow-sm ">
  <div class="row booking-confirm mt-4 text-center">
    <div class="col-12 card card-body pb-2 pt-3 container-dash">
      <h5>Next Session</h5>
      <p></p>
      <% if !@bookings.empty? %>
        <h2 class="recipe-link"><%= @bookings[-1].recipe.name %></h2>
        <p></p>
        <p id="booking-times"><%= @bookings[-1].date.strftime("%B %e, %Y") %> <br> <%= @bookings[-1].start_time.strftime("%I:%M%p") %> - <%= @bookings[-1].start_time.strftime("%I:%M%p") %>
      <% end %>
    </div>
</div>

<!-- collapse menu -->

  <div id="accordion" class="mt-4 shadow-sm">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0 text-center">
        <button class="btn btn-link link-user-dash" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Booking History
        </button>
      </h5>
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">
        <div class="conatiner" >
          <%= link_to "My Bookings", bookings_path, class: "btn btn-light mb-4 shadow-sm d-flex justify-content-center", id:"chef-btn" %>
        </div>
       <!-- booking history -->
       <% if !@bookings.empty? %>
        <% @bookings.each do |booking| %>
         <p>Booking #<%= booking.id %> | Chef <%= booking.recipe.chef.user.first_name %> <%= booking.recipe.chef.user.last_name %></p>
        <% end %>
       <% end %>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h5 class="mb-0 text-center">
        <button class="btn btn-link link-user-dash collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          My Chef Reviews
        </button>
      </h5>
    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
      <div class="card-body">
        <% if !current_user.chef_reviews.empty? %>
          <% current_user.chef_reviews.each do |chef_review|
          %>
            <h5 class="mb-0">Chef <%= chef_review.chef.user.first_name %> <%= chef_review.chef.user.last_name %></h5 >
            <p>Rating: <%= chef_review.rating %> |  <%= chef_review.content %></p>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingThree">
      <h5 class="mb-0 text-center">
        <button class="btn btn-link link-user-dash collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          My Recipe Reviews
        </button>
      </h5>
    </div>
    <div id="collapseThree" class="collapse " aria-labelledby="headingThree" data-parent="#accordion">
      <div class="card-body">
        <% if !current_user.recipe_reviews.empty? %>
          <% current_user.recipe_reviews.each do |recipe_review|
          %>
            <h5 class="mb-0"><%= recipe_review.recipe.name %></h5 >
            <p>Rating: <%= recipe_review.rating %> |  <%= recipe_review.content %></p>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <div class="card mb-4">
    <div class="card-header" id="headingFour">
      <h5 class="mb-0 text-center">
        <button class="btn btn-link link-user-dash collapsed" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
          Favourites
        </button>
      </h5>
    </div>
    <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordion">
      <div class="card-body">
        <% if !@favorite_recipes.empty? %>
          <% @favorite_recipes.each do |recipe| %>
            <%= link_to recipe.name, recipe_path(recipe),class: "link-recipe-dash" %>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

</div>
</div>

