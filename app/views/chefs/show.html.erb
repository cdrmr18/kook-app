<hr>
<!-- chef recipes -->
<div class="container mt-4">
  <div class="row">
    <% @chef.recipes.each do |recipe| %>
    <div class="col-12 col-md-6 col-lg-4 mb-4">
      <div class="card-food">
        <%= link_to cl_image_tag(recipe.photo.key, class: "chef-recipe-show",  crop: :fill), recipe_path(recipe)%>
        <div class="card-food-infos">
          <div>
            <h2><%= recipe.name %></h2>

          <div class="container mt-2">
            <div class="row">
              <div class="col-6 pl-0"><p><span class="mr-3"><%= recipe.cuisine %></span> ⭐️⭐️⭐️⭐️</p></div>
              <div class="col-6"><span>Cook time: <%= recipe.cook_time %> mins</span></div>
            </div>
          </div>

            <p class="mt-2 mr-2"><%= recipe.description %></p>
          </div>

        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<!-- chef reviews -->
<% @chef.chef_reviews.each do |review| %>
  <div class="notification">
    <%= cl_image_tag review.booking.user.photo.key, class: "avatar-large" %>
    <div class="notification-content">
      <p class="my-0"><strong><%= review.booking.user.first_name %> <%= review.booking.user.last_name %></strong></p>
      <p><span><%= review.created_at.strftime("%B %e, %Y") %> |</span>  <%= review.rating.blank? ? "0 reviews" : "⭐️" * review.rating %></p>
      <p><%= review.content %></p>
    </div>
  </div>
<% end %>






