<div class="container text-center">
  <!-- create recipe link -->
  <% if policy(Chef).create? %>
    <%= link_to "Become a chef", new_chef_path, class: "btn button" %>
  <% end %>

  <!--  -->
</div>
<div class="container mt-4">
  <div class="row">
    <% @chefs.each do |chef| %>
    <div class="col-12 col-md-6 col-lg-4 mb-4">
      <div class="card border-0 card-chef" style="width: 100%;">
        <%= link_to cl_image_tag(User.find(chef.user_id).photo.key, class: "card-img-top", crop: :fill), chef_path(chef) %>
        <div class="card-body">
          <h5 class="card-title"><%= chef.user.first_name %> <%= chef.user.last_name %></h5>
          <p class="mt-3"><%= chef.cuisine %> <span class="mr-4"></span><%=  chef.chef_reviews.blank? ? "0 reviews" : "⭐️" * chef.chef_reviews.average(:rating).round(2) %> </p>
          <p class="card-text my-3">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
