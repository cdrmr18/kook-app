<div class="container mt-4">
  <div class="row">
    <% @chefs.each do |chef| %>
    <div class="col-12 col-md-6 col-lg-4 mb-4">
      <div class="card" style="width: 100%;">
        <%= cl_image_tag User.find(chef.user_id).photo.key, class: "card-img-top", crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"><%= User.find(chef.user_id).first_name %> <%= User.find(chef.user_id).last_name %></h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn button">Go somewhere</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
