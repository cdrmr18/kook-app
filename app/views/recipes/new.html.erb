
<!-- recipe review form and recipe image-->
<div class="container card mb-4" style="width: 100%;">
  <div class="row card-body justify-content-center">
    <div class="col-12 col-md-8 ">
      <h1>Add Recipe</h1>
      <%= simple_form_for @recipe do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :cuisine %>
        <%= f.input :cook_time %>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.button :submit, class: "btn button col-12" %>
      <% end %>
    </div>
  </div>
</div>
