<div class="container mt-4">
  <div class="row">
    <% @recipes.each do |recipe| %>
    <div class="col-12 col-md-6 col-lg-4 mb-4">
      <div class="card-trip">
        <% recipe.photos.each do |photo| %>
            <%= cl_image_tag photo.key, class: "card-trip", crop: :fill %>
            <% break %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= recipe.name %> by Chef <span class="card-chef-name"><%= User.find(Chef.find(recipe.chef.user_id).user_id).first_name %> <%= User.find(Chef.find(recipe.chef.user_id).user_id).last_name %></span></h2>
            <p><%= recipe.description %></p>
          </div>
          <h2 class="card-trip-pricing">$<%= recipe.price %></h2>
          <%= cl_image_tag User.find(Chef.find(recipe.chef.user_id).user_id).photo.key, class: "card-trip-user avatar-bordered" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>



