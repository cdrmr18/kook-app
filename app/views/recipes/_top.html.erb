

<div class="container">
    <h2 class="heading-1">Top Recipes</h2>
</div>

<div class="my-4 d-flex overflow-x">
  <% recipes.each do | recipe | %>
      <div class="container">
        <div class="card-category card-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path recipe.photo.key%>)"><%= link_to recipe.name, recipe_path(recipe),class: "text-center recipe-link" %>
        </div>
        <div class="recipe-info card-body pb-0">
              <% recipe.recipe_reviews.each do |review| %>
               <%# <em><%= review.content %>
        </div>
      </div>
    <% end %>
  <% end %>
  
</div>








