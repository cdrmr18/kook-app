

<div class="container">
    <h2 class="heading-1 text-center">Top Recipes</h2>
</div>


<div class="my-4 d-flex overflow-x">
  <% recipes.each do | recipe | %>
     <%= link_to recipe_path(recipe) do  %>
      <div class="container">
        <div class="card-category card-home  effect1" style="background-image:url(<%=     cl_image_path recipe.photo.key%>)">
        </div>
        <div class=" card-body pb-0 text-center">
          <%= link_to recipe.name, recipe_path(recipe),class: "recipe-link" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>








