<h1>RecipeReviews#new</h1>
<p>Find me in app/views/recipe_reviews/new.html.erb</p>



<!-- recipe review form and recipe image-->
<div class="container card mb-4" style="width: 100%;">
  <div class="row card-body justify-content-center">
    <div class="col-12 col-md-8 ">
      <%= cl_image_tag @recipe_photo, width: 250, height: 250, crop: :fill, class: "avatar-square"  %>
      <h3 class="mt-4">Add a review for Recipe <%= @booking.recipe.name %> </h3>

      <%= simple_form_for [@booking, @recipe_review] do |f| %>
        <%= f.input :rating, as: :radio_buttons, collection: 1..5, selected: 5 %>
        <%= f.input :content %>
        <%= f.button :submit, class: "btn button col-12" %>
      <% end %>
    </div>
  </div>
</div>
