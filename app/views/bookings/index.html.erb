<div class="container mt-4">
 <!-- current booking -->
 <div class="container card shadow-sm mb-4 p-4">
   <div class="row">
      <div class="col-12">
        <% if @last_booking.present? && @last_booking.recipe_review.nil? && @last_booking.chef_review.nil? %>
          <h2 class="text-center mb-3 recipe-link">Next Session</h2>
            <div class="card-product mb-4">
                <%= cl_image_tag @last_booking.recipe.photo.key, width: 100, height: 100,  crop: :fill %>
                <div class="card-product-infos pr-0">
                  <h2 class="pt-1"><%= @last_booking.recipe.name %></h2>
                  <p>Chef <%= @last_booking.recipe.chef.user.first_name %> <%= @last_booking.recipe.chef.user.last_name %></p>
                  <p class="mb-2"><%= @last_booking.start_time.strftime("%I:%M%p") %> - <%= @last_booking.end_time.strftime("%I:%M%p") %></p>
                   <i class="fas fa-list-ul"></i> <%= link_to "Shopping List", recipe_path(@last_booking.recipe, anchor: "shopping-list"), class:" link-recipe-dash  text-decoration-none pl-0 pr-2" %>
                </div>
              </div>
            <% else %>
              <div class="container text-center">
                <h4>Book your next session </h4>
                <p><i class="far fa-hand-point-right"></i><%= link_to "Recipes", recipes_path, class:"text-uppercase link-recipe-dash font-weight-bold text-decoration-none" %></p>
              </div>
        <% end %>
      </div>
    </div>
  </div>
<!-- past bookings -->
  <div class="container card mb-4 shadow-sm">
    <div class="row">
      <div class="col-12">
        <h2 class="text-center mb-3 mt-3 recipe-link">Past Sessions</h2>
        <% if @bookings.present? %>
          <% @bookings[0...-1].each do |booking| %>
            <div class="card-product mb-4 ">
              <%= cl_image_tag booking.recipe.photo.key, width: 100, height: 100,  crop: :fill %>
              <div class="card-product-infos pr-0">
                <h2><%= booking.recipe.name %></h2>
                <p>Chef <%= booking.recipe.chef.user.first_name %> <%= booking.recipe.chef.user.last_name %></p>
                <p><%= booking.start_time.strftime("%I:%M%p") %> - <%= booking.end_time.strftime("%I:%M%p") %></p>
                <p><%= link_to "Leave your review", booking_path(booking), class:" link-recipe-dash font-weight-bold text-decoration-none pl-0 pr-2" %></p>
              </div>
            </div>
          <% end %>
          <!--  -->
          <% if !@last_booking.recipe_review.nil? || !@last_booking.chef_review.nil?%>
            <div class="card-product mb-4">
              <%= cl_image_tag @last_booking.recipe.photo.key, width: 100, height: 100,  crop: :fill %>
              <div class="card-product-infos pr-0">
                <h2><%= @last_booking.recipe.name %></h2>
                <p>Chef <%= @last_booking.recipe.chef.user.first_name %> <%= @last_booking.recipe.chef.user.last_name %></p>
                <p><%= @last_booking.start_time.strftime("%I:%M%p") %> - <%= @last_booking.end_time.strftime("%I:%M%p") %></p>
                <p><%= link_to "Leave your review", booking_path(@last_booking), class:"link-recipe-dash font-weight-bold text-decoration-none pl-0 pr-2" %></p>
              </div>
            </div>
           <% end %>
           <% else %>
            <div class="container text-center">
                <h4>You have no past sessions. </h4>
              </div>
          <% end %>
        </div>
      </div>
   </div>
</div>
