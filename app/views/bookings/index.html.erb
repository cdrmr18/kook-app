<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-3">Bookings</h1>
        <% @bookings.each do |booking| %>
          <div class="card border-light mb-3" style="max-width: 100%;">
          <div class="card-header" ><%= link_to "Booking ##{booking.id}", booking_path(booking) %> | <%= booking.recipe.chef.user.first_name %> <%= booking.recipe.chef.user.last_name %></div>
          <div class="card-body">
            <h5 class="card-title"><%= booking.recipe.name %>
        </h5>
            <div class="card-text">
              <h5><%= booking.date.strftime('%B %d, %Y') %></h5>
              <p class="card-text mb-0">Start Time: <%= booking.start_time.strftime("%I:%M%p") %></p>
              <p>End Time: <%= booking.end_time.strftime("%I:%M%p") %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
