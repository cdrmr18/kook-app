<!-- recipe image -->
<div class="banner my-0" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(<%= cl_image_path @recipe.photo.key %>);">
  <div class="container text-center">
    <h1> <%= @recipe.name %> </h1>
  </div>
</div>
<!--  -->
<br>
<h1>New Booking</h1>
<div id='recipe-booking-dates' data-unavailable="<%#= @recipe.unavailable_dates.to_json %>">
   <%# if current_user.id != @recipe.chef.user_id  %>
     <%= simple_form_for [@recipe, @booking] do |f| %>
          <h3>Booking Date</h3>
        <%= f.text_field :date, data: { behavior: "flatpickr"}, id: "booking_start_date" %>
        <%= f.text_field :start_time, data: { behavior: "flatpickr"}, id: "booking_start_time" %>
        <%= f.text_field :end_time, data: { behavior: "flatpickr"}, id: "booking_end_time" %>
        <%= f.button :submit, class: "btn button col-12" %>
      <%# end %>
   <% end %>
</div>
