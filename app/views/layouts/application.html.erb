<!DOCTYPE html>
<html>
  <head>
    <title>KookApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
        <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "LOGO.svg" %>
        <% end %>
      
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon "></span>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar dropdown-toggle", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        </button>




    <!-- search bar -->
      <% if controller.controller_name == 'chefs' && controller.action_name == 'index' || controller.controller_name == 'recipes' && controller.action_name == 'index'%>
          <div class="container-fluid">
            <a class="navbar-brand"></a>
              <form class="d-flex">
              <%= simple_form_for :search, url: root_path, method: :get do |f| %>
              <input class="form-control me-2" type="search" placeholder="cuisine or recipe" aria-label="Search">
              <button class="btn" type="submit">Search</button>
            </form>
          </div>
        <% end %>
      <% end %>
    <!-- search bar end -->

 
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="col-md-12">    
                <div div class="dropdown-menu dropdown-menu-right" id="drpdown" aria-labelledby="navbarDropdown">
                    <div class="inblk"><%= link_to "RECIPES", recipes_path, class: "dropdown-item text" %></div>
                    <div class="inblk"><%= link_to "CHEFS", chefs_path, class: "dropdown-item text" %></div>
                    <div class="inblk"><%= link_to "MESSAGES", chats_path, class: "dropdown-item text" %></div>
                    <div class="inblk"><%= link_to "BOOKINGS", bookings_path, class: "dropdown-item text" %></div>
                    <div class="inblk"><%= link_to "FAVOURITES", "#", class: "dropdown-item text" %></div>
                    <div class="inblk"><%= link_to "PROFILE", chefs_path, class: "dropdown-item text" %></div>
                    <div class="inblk"><%= link_to "LOG OUT", destroy_user_session_path, method: :delete, class: "dropdown-item text" %></div>
                  </div>
                </div>
              </div>
            </li>
           <% else %>
               <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                </li>
            <% end %>
         </ul>
       </div>
      </div>
    </div>
  
    
    </header>
    <!-- navbar end-->

    <!-- DEVISE ALERTS -->
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <!-- DEVISE ALERTS END -->

    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>


    <footer>

    </footer>


  </body>
</html>
